<td class="show-heading">{% block name %}{{ admin.trans(field_description.label) }}{% endblock %}</td>
<td>
    {% block field %}
        {% if field_description.type == 'checkbox' %}
            {% if value == '1' %} yes
            {% elseif value == '0' %}no
            {% else %}-
            {% endif %}
        {% else %} 
                {{ value }}    	
        {% endif %}
    {% endblock %}
</td>