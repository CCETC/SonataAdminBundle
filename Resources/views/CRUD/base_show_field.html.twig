    <td class="show-heading">
        {% block name %}<b>
            {% if field_description.options.label is defined %}
                    {{ field_description.options.label }}
            {% else %}
                    {{  field_description.name }}
            {% endif %}</b>
        {% endblock %}
    </td>
    <td>
    	{% block field %}
            {% if field_description.type == 'checkbox' %}
                {% if value == '1' %} yes
                {% elseif value == '0' %}no
                {% else %}-
                {% endif %}
            {% else %} 
                    {{ value }}    	
            {% endif %}
    	{% endblock %}
	</td>
        
        