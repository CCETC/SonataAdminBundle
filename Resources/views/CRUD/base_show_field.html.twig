    <th style="{% if field_description.options['labelStyles'] is defined %}{{ field_description.options['labelStyles']}}{% endif %}">
        {% block name %}
                {% if field_description.options.label is defined %}
                        {{ field_description.options.label }}
                {% else %}
                        {{  field_description.name }}
                {% endif %}
        {% endblock %}
    </th>
    <td>
    	{% block field %}
            {% if field_description.type == 'checkbox' %}
                {% if value == '1' %} yes
                {% elseif value == '0' %}no
                {% else %}-
                {% endif %}
            {% else %}
                    {{ value }}    	
            {% endif %}
    	{% endblock %}
	</td>